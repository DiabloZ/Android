<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etSendToSecondActivity"
        style="@style/mainTextEditToSend"
        android:text=""
        android:layout_margin="@dimen/layoutStandart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <Button
        android:id="@+id/btnSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_button_send_text"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="@+id/etSendToSecondActivity"
        app:layout_constraintStart_toStartOf="@+id/etSendToSecondActivity"
        app:layout_constraintTop_toBottomOf="@+id/etSendToSecondActivity" />
</androidx.constraintlayout.widget.ConstraintLayout>