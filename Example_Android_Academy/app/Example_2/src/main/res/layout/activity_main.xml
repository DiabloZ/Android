<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".classes.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textName"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/colorBackgroundTextView"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="@string/fullName"
            android:textColor="@color/colorTextView"
            android:textSize="20sp"
            tools:ignore="RtlSymmetry" />

            <fragment
                android:id="@+id/fragmentPhoto"
                android:name="com.example.example_2.fragments.PhotoFragment"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                tools:layout="@layout/fragment_photo" />

            <fragment
                android:id="@+id/fragmentContent"
                android:name="com.example.example_2.fragments.ContentFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout="@layout/fragment_content" />

    </LinearLayout>
</ScrollView>