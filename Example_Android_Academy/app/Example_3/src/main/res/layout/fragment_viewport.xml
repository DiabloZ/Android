<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/viewportFragmentGIF"
        android:name="com.example.example_3.fragments.ViewportFragments.ViewportFragmentGif"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_viewport_gif" />

    <fragment
        android:id="@+id/viewportFragmentText"
        android:name="com.example.example_3.fragments.ViewportFragments.ViewportFragmentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/viewportFragmentGIF"
        app:layout_constraintStart_toStartOf="@+id/viewportFragmentGIF"
        tools:layout="@layout/fragment_viewport_text" />


</androidx.constraintlayout.widget.ConstraintLayout>