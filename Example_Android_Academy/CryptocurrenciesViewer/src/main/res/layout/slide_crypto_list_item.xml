<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="4dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    app:cardElevation="10dp"
    android:background="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_Crypto"
            android:padding="5dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitXY"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/title_Crypto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="8dp"
            android:text="EPH"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/img_Crypto"
            app:layout_constraintTop_toTopOf="@+id/img_Crypto" />

        <TextView
            android:id="@+id/price_Crypto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:text="$1,212.01"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/title_Crypto"
            app:layout_constraintStart_toStartOf="@+id/title_Crypto"
            app:layout_constraintTop_toTopOf="@+id/title_Crypto" />

        <ImageView
            android:id="@+id/oneDay"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/img_Crypto"
            app:layout_constraintStart_toStartOf="@+id/title_Crypto"
            app:srcCompat="@drawable/twentyfourhour" />

        <TextView
            android:id="@+id/market_Dynamics_Day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="+ 200.01%"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/oneDay"
            app:layout_constraintStart_toEndOf="@+id/oneDay"
            app:layout_constraintTop_toTopOf="@+id/oneDay" />

        <ImageView
            android:id="@+id/oneHour"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/oneDay"
            app:layout_constraintStart_toStartOf="@+id/price_Crypto"
            app:layout_constraintTop_toTopOf="@+id/oneDay"
            app:srcCompat="@drawable/onehour" />

        <TextView
            android:id="@+id/market_Dynamics_Hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="+ 0.25%"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/oneHour"
            app:layout_constraintStart_toEndOf="@+id/oneHour"
            app:layout_constraintTop_toTopOf="@+id/oneHour" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="14dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>